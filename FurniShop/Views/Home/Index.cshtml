@{
    ViewData["Title"] = "FurniShop | فروشگاه مبلمان مدرن";
 }

<!-- Hero Banner بدون تصویر -->
<section class="hero">
    <div class="container">
        <h1 class="fw-bold mb-3">زیبایی را به خانه‌تان بیاورید</h1>
        <p class="lead">فروشگاه مبلمان با طراحی مدرن، شیک و اقتصادی</p>
        <a href="products.html" class="btn btn-warning btn-lg mt-3 shadow">مشاهده محصولات</a>
    </div>
</section>

<!-- دسته‌بندی‌ها -->
<section class="container my-5">
    <h2 class="text-center mb-4">🗂️ دسته‌بندی محصولات</h2>
    <div class="row text-center g-4">
        <div class="col-md-4">
            <div class="card category-card shadow-sm">
                <div class="card-body">
                    <img src="/images/مبل.jpg" class="card-img-top" alt="مبل راحتی">
                    <h5 class="card-title">🛋️ مبل</h5>
                    <p class="card-text text-muted">تنوع بالا در رنگ و طراحی</p>
                    <a href="#" class="btn btn-outline-primary">مشاهده</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card category-card shadow-sm">
                <div class="card-body">
                    <img src="/images/صندلی.jpg" class="card-img-top" alt="صندلی">
                    <h5 class="card-title">🪑 صندلی</h5>
                    <p class="card-text text-muted">مدرن و راحت برای فضاهای مختلف</p>
                    <a href="#" class="btn btn-outline-success">مشاهده</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card category-card shadow-sm">
                <div class="card-body">
                    <img src="/images/میز.jpg" class="card-img-top" alt="میز">
                    <h5 class="card-title">🪟 میز</h5>
                    <p class="card-text text-muted">میزهای کار، جلو مبلی و ناهارخوری</p>
                    <a href="#" class="btn btn-outline-danger">مشاهده</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- محصولات پر فروش -->
<section class="container my-5">
    <h2 class="text-center mb-4">🔥 محصولات پر فروش</h2>
    <div class="row g-4">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <img src="~/images/مبل کلاسیک.jpg" />
                    <h5 class="card-title">🛋️ مبل راحتی کلاسیک</h5>
                    <p class="text-muted">۴٬۲۰۰٬۰۰۰ تومان</p>
                    <a href="product-detail.html" class="btn btn-sm btn-outline-dark">جزئیات</a>
                </div>
            </div>
        </div>
        <!-- بقیه محصولات را می‌تونی مشابه اضافه کنی -->
    </div>
</section>

