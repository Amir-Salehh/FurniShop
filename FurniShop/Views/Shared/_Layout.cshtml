<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold" href="#">🛋️ FurniShop</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link active">خانه</a></li>
                    <li class="nav-item"><a asp-controller="Product" asp-action="Index" class="nav-link">محصولات</a></li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                👤 پنل کاربری
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">ورود به پنل</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" asp-controller="Authentication" asp-action="Logout">خروج</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a asp-controller="Cart" asp-action="Index" class="nav-link">سبد خرید</a></li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="Authentication" asp-action="Login" class="nav-link">ثبت نام/ورود</a>
                        </li>
                    }
                </ul>

                <form asp-controller="Products" asp-action="Search" method="get" class="d-flex me-auto">
                    <input class="form-control me-2" type="search" name="query" placeholder="جستجوی محصول..." aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">جستجو</button>
                </form>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <!-- فوتر -->
    <footer class="bg-dark text-white text-center py-4 mt-5">
        <p class="mb-1">© 2025 FurniShop - همه حقوق محفوظ است.</p>
        <p class="small mb-0">طراحی شده برای نمونه‌کار تمرینی با Bootstrap 5</p>
    </footer>

    <script src="lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>